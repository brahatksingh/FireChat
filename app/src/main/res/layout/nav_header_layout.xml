<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/AppLightBlue"
    android:padding="8dp">

    <TextView
        android:id="@+id/drawer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="40dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/drawer_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drawer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emailllll"
        android:textSize="24dp"
        android:fontFamily="@font/roboto_medium"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/drawer_uid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawer_name" />

    <TextView
        android:id="@+id/drawer_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UID"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawer_email" />

    <ImageView
        android:id="@+id/drawer_imv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profilepicnormall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>